 <table>
  <tr>
    <th><%= t("song.tracknumber") %></th>
    <th><%= t("song.artist") %></th>
    <th><%= t("song.album") %></th>
    <th><%= t("song.title") %></th>
    <th><%= t("song.length") %></th>
    <th><%= t("song.bitrate") %></th>
  </tr>
  <% iterate @songs do |song|%>
  <tr>
    <td><%= song.tracknumber %></td>
    <td><%= song.artist %></td>
    <td><%= song.album %></td>
    <td><a title="<%= song.filepath %>" href="#<%= "#{song.artist} - #{song.title}" %>" class="play" filepath="<%= song.filepath %>"><%= song.title %></a></td>
    <td><%= song.length %></td>
    <td><%= song.bitrate %></td>
  </tr>
  <% end %>
</table>

